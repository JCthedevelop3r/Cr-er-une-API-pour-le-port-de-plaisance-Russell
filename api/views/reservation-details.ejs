<div class="reservation-detail-container">
  <h1>Réservation N°<%= reservation._id %></h1>

  <div class="catway-number-container">
    <h2>Numéro du catway :</h2>
    <p class="catway-number"><%= reservation.catwayNumber %></p>
  </div>

  <div class="client-name-container">
    <h2>Nom du client :</h2>
    <p class="client-name"><%= reservation.clientName %></p>
  </div>

  <div class="boat-name-container">
    <h2>Nom du bateau :</h2>
    <p class="boat-name"><%= reservation.boatName %></p>
  </div>

  <div class="check-in-container">
    <h2>Début de réservation :</h2>
    <p class="check-in">
      <%= new Date(reservation.checkIn).toLocaleDateString("fr-FR") %>
    </p>
  </div>

  <div class="check-out-container">
    <h2>Fin de réservation :</h2>
    <p class="check-out">
      <%= new Date(reservation.checkOut).toLocaleDateString("fr-FR") %>
    </p>
  </div>
</div>
